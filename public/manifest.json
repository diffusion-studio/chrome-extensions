{
  "manifest_version": 3,
  "name": "diffusion-studio-chrome-extension",
  "version": "1.0",
  "description": "",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.diffusion.studio/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png"
  }
}